<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Shopify task">
    {{ content_for_header }}
    <title>{{ 'sections.page.title' | t}}</title>
    {{ 'index.css' | asset_url | stylesheet_tag }}
    <!-- <link rel="stylesheet" href="{{ 'index.css' | asset_url }}"> -->
  </head>

  <script src="https://unpkg.com/@shopify/theme-sections@4.1.1/dist/theme-sections.min.js" defer></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      Shopify.theme.sections.load('*')
    })
  </script>

  <body>
    {% section 'alternate-header' %}

    {% render 'alternate-breadcrumbs' %}

    <main id="main" class="container">{{ content_for_layout }}</main>

    {% section 'alternate-footer' %}

  </body>
</html>
